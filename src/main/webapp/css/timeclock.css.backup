@charset "UTF-8";

/* === General & Page Height Control === */
body.timeclock-page {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #333;
    background-color: transparent;
    position: relative;
}

body.timeclock-page::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-image: url('../Images/PunchingIn.webp');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: -1;
    opacity: 0.8;
}

body.timeclock-page .parent-container {
    height: 100%;
    padding-bottom: 20px;
    box-sizing: border-box;
}

/* === Clock Container === */
#main-clock-container {
    max-width: 750px;
    width: 90%;
    margin: 20px auto 30px auto;
    padding: 25px 30px;
    background: linear-gradient(145deg, #2c3e50, #34495e);
    color: #ecf0f1;
    border: 1px solid #2c3e50;
    border-radius: 10px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.25),
                inset 0 2px 4px rgba(0, 0, 0, 0.3),
                inset 0 -3px 3px rgba(255,255,255,0.05);
    text-align: center;
    font-family: 'Orbitron', 'Courier New', monospace;
    font-size: 2.2em;
    font-weight: 700;
    letter-spacing: 3px;
    text-shadow: 0 0 5px rgba(236, 240, 241, 0.3),
                 0 0 10px rgba(236, 240, 241, 0.2);
    line-height: 1.2;
    box-sizing: border-box;
}

/* === Employee Selector === */
.employee-selector-container {
    max-width: 750px;
    width: 90%;
    margin: 0 auto 20px auto;
    padding: 20px 25px;
    text-align: center;
    background-color: #fcf8e3;
    border: 1px solid #a4a08a;
    border-radius: 6px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    box-sizing: border-box;
    display: flex;
    align-items: center;
    gap: 15px;
}
.employee-selector-container label {
    margin-right: 10px;
    font-weight: 600;
    color: #5c584a;
}
.employee-selector-container select {
    padding: 8px 12px;
    flex-grow: 1;
    height: 40px;
    border: 1px solid #b0a991;
    border-radius: 4px;
    font-size: 1em;
    cursor: pointer;
    vertical-align: middle;
    background-color: #fff;
}
.employee-selector-container select:focus {
    border-color: #8c866d;
    outline: 0;
    box-shadow: 0 0 0 0.2rem rgba(140, 134, 109, 0.25);
}
#btnPrintEmailSingleTimecard {
    flex-shrink: 0;
    height: 40px;
    white-space: nowrap;
}

/* === Timecard Container & Card === */
.timecard-container {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding: 0 0 30px 0;
}

.timecard {
    background-color: #fcf8e3;
    border: 1px solid #a4a08a;
    box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.2);
    border-radius: 6px;
    padding: 20px 25px 30px 25px;
    width: 90%;
    max-width: 750px;
    box-sizing: border-box;
}

/* === Timecard Header === */
.timecard-header {
    text-align: center;
    border-bottom: 3px double #8c866d;
    padding-bottom: 10px;
    margin-bottom: 15px;
}

body.timeclock-page h1 {
    background: none;
    border: none;
    padding: 0;
    margin: 0 0 8px 0;
    color: #5c584a;
    font-family: 'Courier New', Courier, monospace;
    font-size: 1.8em;
    font-weight: bold;
    text-transform: uppercase;
}

.timecard-pay-period {
    font-size: 0.95em;
    font-weight: 600;
    color: #444;
    margin-top: 5px;
}

/* === Top Notification Bar === */
#notification-bar {
    max-width: 100%;
    margin: 0 0 15px 0;
    padding: 12px 15px;
    border-radius: 4px;
    text-align: center;
    font-weight: 500;
    box-sizing: border-box;
    display: block;
}
#notification-bar.success-message {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #badbcc;
}
#notification-bar.error-message {
    background-color: #f8d7da;
    color: #842029;
    border: 1px solid #f5c2c7;
}

/* === Info Sections === */
.timecard-info {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 15px;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid #d3cbae;
    font-size: 0.9em;
    line-height: 1.6;
}
.info-left, .info-right {
    flex: 1 1 calc(50% - 10px);
    min-width: 280px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    gap: 5px;
}
.timecard-info .info-item {
    display: flex;
    align-items: baseline;
}
.timecard-info .info-item strong {
    font-weight: 600;
    color: #5c584a;
    margin-right: 8px;
    min-width: 95px;
    flex-shrink: 0;
    text-align: left;
}
.timecard-info .info-item .info-value {
    text-align: left;
    word-break: break-word;
    flex-grow: 1;
}

/* === Timecard Table Styling === */
.timecard-table-container {
    width: 100%;
    max-height: 450px;
    overflow-y: auto;
    overflow-x: auto;
    border: 1px solid #b0a991;
    margin-bottom: 25px;
    background-color: #fff;
    position: relative;
    scroll-behavior: smooth;
}
table.timecard-table {
    width: 100%;
    border-collapse: collapse;
    font-family: 'Consolas', 'Courier New', Courier, monospace;
    font-size: 0.9em;
    margin-bottom: 0;
}
.timecard-table th, .timecard-table td {
    border: none;
    border-bottom: 1px solid #e0dacb;
    padding: 7px 8px;
    text-align: center;
    vertical-align: middle;
    white-space: nowrap;
    border-left: 0;
    border-right: 0;
    font-size: 0.9em;
}
.timecard-table thead th {
    background-color: #e8e1c6;
    color: #5c584a;
    font-weight: bold;
    position: sticky;
    top: 0;
    z-index: 10;
    border-bottom-width: 2px;
    border-color: #b0a991;
}
.timecard-table th:nth-child(3), .timecard-table td:nth-child(3) { padding-right: 20px; }
.timecard-table th:nth-child(5), .timecard-table td:nth-child(5) { padding-right: 20px; }

.timecard-table th:nth-child(1), .timecard-table td:nth-child(1) { width: 10%; min-width: 55px; text-align: left; padding-left: 10px; }
.timecard-table th:nth-child(2), .timecard-table td:nth-child(2) { width: 18%; min-width: 90px; text-align: left; }
.timecard-table th:nth-child(5), .timecard-table td:nth-child(5) { text-align: right; }
.timecard-table th:nth-child(6), .timecard-table td:nth-child(6) { width: 25%; min-width: 120px; text-align: left; padding-right: 10px; }
.timecard-table tbody tr.band-a { background-color: #ffffff; }
.timecard-table tbody tr.band-b { background-color: #f7f7f0; }
.timecard-table tbody tr:last-child td { border-bottom: none; }
.lateOrEarlyOutTag { color: #c00000; font-weight: bold; }
.timecard-table tfoot { position: sticky; bottom: -1px; z-index: 10; }
.timecard-table tfoot tr { background-color: #e8e1c6; font-weight: bold; color: #5c584a; }
.timecard-table tfoot td { background-color: inherit; border-bottom: none; padding: 8px 8px; }
.timecard-table tfoot tr:first-child td { border-top: 2px solid #b0a991 !important; }
.timecard-table tfoot td.period-total-label { text-align: right; }
.timecard-table tfoot td.period-total-value { text-align: right; }
.timecard-table tfoot tr.hours-breakdown-row td { text-align: right; font-size: 0.9em; font-weight: normal; padding-top: 4px; border-top: none !important; color: #333; }

/* === Accrual Balances Section === */
.accrual-balances { 
    margin-top: 25px; 
    margin-bottom: 20px; 
    padding-top: 15px; 
    border-top: 1px solid #d3cbae; 
    text-align: center;
}
.accrual-title { 
    margin-top: 0; 
    margin-bottom: 15px; 
    font-size: 1.1em; 
    font-weight: 600; 
    color: #5c584a; 
    text-transform: uppercase; 
    text-align: center;
}
.balance-item { 
    display: inline-block; 
    margin: 0 15px 10px 15px; 
    text-align: center;
}
.balance-label { 
    font-weight: 600; 
    color: #444; 
    margin-right: 5px;
}
.balance-value { 
    font-weight: bold; 
    color: #333; 
    background-color: #ffffff; 
    padding: 3px 8px; 
    border-radius: 4px; 
    border: 1px solid #ccc; 
}

/* === Punch Button Styles === */
.punch-buttons { display: flex; justify-content: space-around; margin-top: 20px; padding: 15px 10px 5px 10px; border-top: 1px solid #d3cbae; gap: 20px;}
.punch-buttons form { flex: 1; display: flex; }
.punch-button {
    flex-grow: 1;
    padding: 12px 10px;
    font-size: 1.3em;
    font-weight: bold;
    border-radius: 6px;
    cursor: pointer;
    text-transform: uppercase;
    color: white;
    text-shadow: 0 -1px 1px rgba(0, 0, 0, 0.4);
    box-shadow: inset 0 1px 1px rgba(255, 255, 255, 0.5), 0 2px 4px rgba(0, 0, 0, 0.3);
    position: relative;
    transition: all 0.1s ease-in-out;
}
.punch-button::before {
    content: "";
    position: absolute;
    top: 1px;
    left: 1px;
    right: 1px;
    height: 50%;
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0));
    border-radius: 6px 6px 10px 10px;
}
.punch-button:hover {
    filter: brightness(1.1);
}
.punch-button:active {
    box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.4);
    transform: translateY(1px);
}
.punch-in {
    background-color: #5cb85c;
    border: 1px solid #4cae4c;
}
.punch-out {
    background-color: #c13030;
    border: 1px solid #a12828;
}
.punch-button i.fa-spinner { margin-right: 10px; }

/* === Modal Styles === */
.modal {
    display: none;
    position: fixed;
    z-index: 9999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.6);
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
}
.modal.modal-visible {
    display: flex;
    opacity: 1;
}
@keyframes slideDownFadeIn {
    from { transform: translateY(-30px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
}
.modal-content {
    background-color: #ffffff;
    margin: 0 auto;
    width: 90%;
    max-width: 480px;
    border: none;
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    text-align: center;
    position: relative;
    overflow: hidden;
    animation: slideDownFadeIn 0.4s ease-out;
}
.modal-content h2 {
    margin: 0;
    padding: 18px 25px;
    font-size: 1.25em;
    font-weight: 600;
    color: #fff;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.modal-content h2 .fas {
    margin-right: 12px;
    font-size: 1.2em;
}
.modal-content.success-message h2 { background-color: #28a745; }
.modal-content.error-message h2 { background-color: #dc3545; }
.modal-content p {
    margin: 0;
    padding: 25px 30px;
    line-height: 1.6;
    color: #333;
    font-size: 1.05em;
}
.close-button {
    color: rgba(255, 255, 255, 0.8);
    position: absolute;
    top: 10px;
    right: 15px;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
    transition: color 0.2s ease;
}
.close-button:hover { color: #fff; }
.modal-footer {
    margin-top: 0;
    padding: 15px;
    background-color: #f7f7f7;
    border-top: 1px solid #e0e0e0;
    display: flex;
    justify-content: flex-end;
}
.modal-ok-button {
    background-color: #007bff;
    color: white;
    padding: 10px 24px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1em;
    font-weight: 500;
    transition: background-color 0.2s ease;
}
.modal-ok-button:hover { background-color: #0056b3; }
.report-error-row td {
    color: #a94442 !important;
    font-weight: bold !important;
    text-align: center !important;
}

/* === Styles for User Logout Button === */
.user-logout-container {
    width: 90%;
    max-width: 750px;
    margin: 20px auto 40px auto;
    display: flex;
}
.logout-button-user {
    display: flex;
    flex-grow: 1;
    align-items: center;
    justify-content: center;
    padding: 12px 25px;
    font-size: 1.1em;
    font-weight: 600;
    color: #343a40;
    text-align: center;
    text-decoration: none;
    border: 1px solid #adb5bd;
    border-radius: 5px;
    text-shadow: 0 1px 0 rgba(255,255,255,.5);
    background-color: #f8f9fa;
    background-image: linear-gradient(to bottom,#fff,#e9ecef);
    box-shadow: inset 0 1px 1px rgba(255,255,255,.6),0 1px 2px rgba(0,0,0,.1);
    transition: all .15s ease-in-out;
}
.logout-button-user:hover {
    filter: brightness(1.05);
    border-color: #90a4ae;
}
.logout-button-user i {
    margin-right: 8px;
}

/* === Responsive Media Queries === */
@media (max-width: 768px) {
    .timecard-info {
        flex-direction: column;
        gap: 10px;
    }
    
    .info-left, .info-right {
        min-width: 100%;
    }
    
    .timecard-table-container {
        max-height: 350px;
        overflow-y: auto;
        overflow-x: auto;
    }
    
    .timecard-table {
        font-size: 0.8em;
    }
    
    .timecard-table th, .timecard-table td {
        padding: 5px 4px;
        font-size: 0.8em;
    }
    
    .timecard-table th:nth-child(5), .timecard-table td:nth-child(5),
    .timecard-table th:nth-child(6), .timecard-table td:nth-child(6) {
        white-space: normal;
        word-wrap: break-word;
    }
    
    .punch-buttons {
        flex-direction: column;
        gap: 10px;
    }
    
    .punch-button {
        font-size: 1.1em;
        padding: 10px;
    }
    
    .accrual-balances {
        text-align: center;
    }
    
    .balance-item {
        display: block;
        margin: 5px 0;
        text-align: center;
    }
}

@media (max-width: 480px) {
    body.timeclock-page {
        background-image: none !important;
        background-color: #007bff !important;
        overflow-y: auto !important;
    }
    
    #main-clock-container {
        width: calc(100% - 10px) !important;
        margin: 5px !important;
        padding: 10px !important;
        box-sizing: border-box !important;
    }
    
    .employee-selector-container {
        width: calc(100% - 10px) !important;
        margin: 5px !important;
        padding: 10px !important;
        box-sizing: border-box !important;
    }
    
    .timecard-container {
        padding: 0 !important;
        margin: 5px !important;
        width: calc(100% - 10px) !important;
    }
    
    .timecard {
        margin: 0 !important;
        padding: 5px !important;
        width: 100% !important;
        background-color: #fcf8e3 !important;
        box-sizing: border-box !important;
    }
    
    .timecard-table-container {
        max-height: 300px !important;
        margin: 0 -5px 15px -5px !important;
        width: calc(100% + 10px) !important;
        overflow-y: auto !important;
        overflow-x: auto !important;
    }
    
    .timecard-table {
        font-size: 0.65em !important;
        width: 100% !important;
    }
    
    .timecard-table th, .timecard-table td {
        padding: 1px !important;
        font-size: 0.65em !important;
    }
    
    .timecard-table th:nth-child(1), .timecard-table td:nth-child(1) {
        width: 8% !important;
    }
    
    .timecard-table th:nth-child(2), .timecard-table td:nth-child(2) {
        width: 15% !important;
    }
    
    .timecard-table th:nth-child(3), .timecard-table td:nth-child(3) {
        width: 20% !important;
    }
    
    .timecard-table th:nth-child(4), .timecard-table td:nth-child(4) {
        width: 20% !important;
    }
    
    .timecard-table th:nth-child(5), .timecard-table td:nth-child(5) {
        width: 17% !important;
        white-space: normal !important;
        word-wrap: break-word !important;
    }
    
    .timecard-table th:nth-child(6), .timecard-table td:nth-child(6) {
        width: 20% !important;
        white-space: normal !important;
        word-wrap: break-word !important;
    }
    
    .timecard-pay-period {
        font-size: 0.75em !important;
    }
    
    .accrual-balances {
        text-align: center !important;
    }
    
    .balance-item {
        display: block !important;
        margin: 5px 0 !important;
        text-align: center !important;
    }
    
    .punch-button {
        font-size: 1em !important;
        padding: 8px !important;
    }
    
    .modal-content {
        width: 95% !important;
        margin: 10px !important;
    }
    
    .modal-content p {
        padding: 20px 15px !important;
        font-size: 1em !important;
    }
    
    #clock {
        font-size: 16px !important;
    }
}