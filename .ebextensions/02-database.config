option_settings:
  aws:elasticbeanstalk:application:environment:
    DB_HOST: your-rds-endpoint.region.rds.amazonaws.com
    DB_PORT: 3306
    DB_NAME: precision_time_db
    DB_USER: admin
    DB_PASSWORD: your-secure-password
    
# Security group rules to allow EB to connect to RDS
Resources:
  AWSEBSecurityGroup:
    Type: AWS::EC2::SecurityGroup
    Properties:
      GroupDescription: Security group for Elastic Beanstalk environment
      SecurityGroupIngress:
        - IpProtocol: tcp
          FromPort: 80
          ToPort: 80
          CidrIp: 0.0.0.0/0
        - IpProtocol: tcp
          FromPort: 443
          ToPort: 443
          CidrIp: 0.0.0.0/0